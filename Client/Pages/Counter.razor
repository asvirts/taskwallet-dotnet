@page "/counter"

<h1>Counter</h1>
<p>The counter value is @currentCount</p>
<button class="btn btn-primary" @onclick=DecrementCounter>-1</button>
<button class="btn btn-primary" @onclick=IncrementCounter>+1</button>
<button class="btn btn-primary" @onclick="@( () => IncrementCounter(5) )">+5</button>

@code {
    private int currentCount = 42;

    private void IncrementCounter()
    {
        currentCount++;
    }
    private void DecrementCounter()
    {
        currentCount--;
    }

    private void IncrementCounter(int value)
    {
        currentCount += value;
    }
}
